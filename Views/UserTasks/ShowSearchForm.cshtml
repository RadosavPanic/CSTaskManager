@{
    ViewData["Title"] = "Search tasks";
}

<h4>Search for a task</h4>
<hr />
<div class="row">
    <div>
        <a asp-action="Index">
            <i class="bi bi-arrow-left-square-fill back-arrow"></i>
        </a>
    </div>
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">            
            <div class="form-group mb-3">
                <label for="SearchPhrase" class="control-label mb-1">Insert your search term</label>
                <input name="SearchPhrase" class="form-control" />                
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
