@model IEnumerable<TaskManager.Models.UserTask>

@{
    ViewData["Title"] = "User tasks";
}

<p>
    <a asp-action="Create" class="addNewTask">
        <i class="bi bi-patch-plus-fill"></i>
        <span>New Task</span>
    </a>
</p>
<div class="col-6">
    <table class="table">
    <thead>
        <tr>
            <th>Task name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>         
            <td class="taskOptions">
                    <a asp-action="Details" asp-route-id="@item.Id" class="taskDetails">
                        <i class="bi bi-info-circle"></i>                        
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="editTask">
                        <i class="bi bi-pencil-fill"></i>                        
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="deleteTask">
                        <i class="bi bi-trash-fill"></i>                        
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
