@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Delete task";
}


<div>
    <h4>Delete task</h4>
    <hr />
    <div>
        <a asp-action="Index">
            <i class="bi bi-arrow-left-square-fill back-arrow"></i>
        </a>
    </div>
    <dl class="row">
        <dt class="col-sm-2">Task name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TaskName)</dd>
        <dt class="col-sm-2">Task description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TaskDescription)</dd>
    </dl>
    
    <h6>Are you sure you want to delete this task? This action cannot be reversed.</h6>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />       
    </form>
</div>
