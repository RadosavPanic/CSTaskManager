@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Create new task";
}

<h4>Create new task</h4>
<hr />

<div class="row">
    <div>
        <a asp-action="Index">
            <i class="bi bi-arrow-left-square-fill back-arrow"></i>
        </a>
    </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="TaskName" class="control-label mb-1">Title</label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TaskDescription" class="control-label mb-1">Description</label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>        
    </div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
