@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Task details";
}

<div>
    <h4>Task Details</h4>
    <hr />
    <div>
        <a asp-action="Index">
            <i class="bi bi-arrow-left-square-fill back-arrow"></i>
        </a>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">Task name</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.TaskName)</dd>
        <dt class = "col-sm-2">Task description</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.TaskDescription)</dd>
    </dl>
</div>
